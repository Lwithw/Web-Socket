# Database Configuration
DB_USER=postgres
DB_PASSWORD=Rapidfire@123
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bun_chat
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# JWT Authentication (CHANGE THIS IN PRODUCTION!)
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d

# RabbitMQ (Optional - leave empty if not using)
RABBITMQ_URL=amqp://localhost:5672

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_WS_MESSAGES=50

# HTTPS/WSS (for production - set to true and provide cert paths)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS (set to your frontend URL in production)
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=./uploads

